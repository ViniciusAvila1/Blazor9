@page "/exemplo2"

@rendermode InteractiveServer

<PageTitle>Exemplo2</PageTitle>

<form>
    <div class="row">
        <div class="col-md-4">
            <label for="nomeInput" class="form-label">Nome:</label>
            <input type="text" @bind="xNome" @bind:event="oninput" class="form-control" id="nomeInput"
                placeholder="Digite seu nome">
            @if (string.IsNullOrEmpty(xNome))
            {
                <span class=" text-danger">Por favor, insira seu nome completo.</span>
            }
        </div>

        <div class=" col-md-4">
            <label for="cidadeInput" class="form-label">Cidade:</label>
            <input type="text" @bind="xCidade" @bind:event="oninput" class="form-control" id="cidadeInput"
                placeholder="Digite sua Cidade:">
        </div>
    </div>

    @if (!string.IsNullOrEmpty(xNome))
    {
        <div class=" row mt-3">
            <div class="col-md-2">
                <button type="button" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    }
</form>

<style>
    .form-control {
        margin-bottom: 15px;
        border: 2px solid #808080;
    }
</style>

@code {
    private string xNome = "";
    private string xCidade = "";

    private bool mostrarBotao = false;

    private void ValidaBotao()
    {
        if (!string.IsNullOrEmpty(xNome) && !string.IsNullOrEmpty(xCidade))
        {
            // Habilitar o botão
            mostrarBotao = true;
        }
        else
        {
            // Desabilitar o botão
            mostrarBotao = false;
        }
    }
}